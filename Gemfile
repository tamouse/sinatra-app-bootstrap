  gem 'guard'
  gem 'guard-rspec'
  gem 'guard-cucumber'
  gem 'guard-haml'
  gem 'guard-sass'
  gem 'guard-rack'
  gem 'guard-coffeescript'
end

group :test do
  gem 'rspec'
  gem 'cucumber'
  gem 'capybara'
  gem 'simplecov', :require => false
end
